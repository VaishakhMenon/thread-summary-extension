{
  "manifest_version": 3,
  "name": "Thread Summary",
  "version": "1.0.0",
  "description": "Extract and summarize AI conversation threads",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["src/content/claude-scraper.jsx"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  }
}